<?xml version="1.0" encoding="UTF-8"?> 
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" 
	version="1.0"> 
    <entity class="com.mdef.gestionpreguntas.entidades.Usuario" access="FIELD">
    	<table name="USUARIOS" />
    	<inheritance strategy="SINGLE_TABLE"/>
    	<discriminator-value>null</discriminator-value>
    	<discriminator-column name="tipo_usuario" discriminator-type="STRING" />
        <attributes> 
            <id name="id" >
            	<generated-value strategy="IDENTITY"/>
            </id>
            <basic name="nombre" optional="false" >
            	<column name="nombre" unique="false"/>
            </basic>
            <basic name="username" optional="false" >
            	<column  unique="true"/>
            </basic>
            <basic name="password" optional="true" />
            <basic name="role" optional="false">
            	<enumerated>STRING</enumerated>
            </basic>
            <basic name="accountNonExpired" >
            	<column name="cuenta_activa" />
            </basic>
            <basic name="accountNonLocked" >
            	<column name="cuenta_desbloqueada" />
            </basic>
            <basic name="credentialsNonExpired" >
            	<column name="credenciales_activas" />
            </basic>
            <basic name="enabled" >
            	<column name="habilitada" />
            </basic>
            <one-to-many name="preguntas" mapped-by="usuario"></one-to-many>
            
        </attributes>
     </entity>
</entity-mappings>